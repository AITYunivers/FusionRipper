<Window x:Class="Nebula.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nebula.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF262626" Foreground="#FFE6E8E6" AllowDrop="True">
    <Grid AllowDrop="True" Drop="Nebula_DropFile">
        <Grid.RowDefinitions>
            <RowDefinition Height="19"/>
            <RowDefinition Height="209*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="611*"/>
        </Grid.ColumnDefinitions>
        <TreeView x:Name="TV_Main" Background="{x:Null}" BorderBrush="#FF957FEF" Foreground="#FFE6D3F1" Grid.RowSpan="1" Grid.Row="1" BorderThickness="0,0,1,0">
            <TreeView.Resources>
                <SolidColorBrush Color="#30FFFFFF" x:Key="{x:Static SystemColors.HighlightBrushKey}"/>
                <SolidColorBrush Color="#15FFFFFF" x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"/>
            </TreeView.Resources>
            <TreeViewItem Header="App Info" Foreground="#FFE6E8E6"/>
            <TreeViewItem x:Name="TV_Frames" Header="Frames" Foreground="#FFE6E8E6" Selected="TV_FrameListSelected">
                <!--<TreeViewItem Header="Example Frame" Foreground="#FFE6E8E6"/>-->
            </TreeViewItem>
        </TreeView>
        <Menu Grid.Column="0" Foreground="#FFE6E8E6" Grid.RowSpan="1" Grid.ColumnSpan="2" BorderBrush="#FF957FEF" BorderThickness="0,0,0,1">
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF2B2B2B"/>
                    <GradientStop Color="#FF262626" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>

            <MenuItem Header="_File">
                <MenuItem Header="_Open" Foreground="Black"/>
                <MenuItem Header="_Close" Foreground="Black"/>
                <MenuItem Header="_Save" Foreground="Black"/>
            </MenuItem>
        </Menu>
        <TabControl Grid.Column="1" Grid.Row="1" Background="{x:Null}" Foreground="#FFE6E8E6" BorderBrush="#FF957FEF" BorderThickness="0,1,0,0">
            <TabItem x:Name="FrameView" Header="Frame" Background="{x:Null}" Foreground="#FFE6E8E6" BorderBrush="#FF957FEF">
                <Grid MouseWheel="FrameView_OnScroll" MouseMove="FrameView_MoveView" ClipToBounds="True" MouseLeave="FrameView_ResetMouse">
                    <Viewbox RenderTransformOrigin="0.5,0.5">
                        <Viewbox.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform X="0"/>
                            </TransformGroup>
                        </Viewbox.RenderTransform>
                        <!--<Rectangle Fill="Black" Width="1280" Height="720" HorizontalAlignment="Center" VerticalAlignment="Center" />-->
                    </Viewbox>
                </Grid>
            </TabItem>
            <TabItem x:Name="FramesListView" Header="Frame List" Background="{x:Null}" Foreground="#FFE6E8E6" BorderBrush="#FF957FEF">
                <Grid ClipToBounds="True">
                    <ListBox Background="{x:Null}">
                        <!--<ListBoxItem Height="90" BorderBrush="#FF957FEF" BorderThickness="0,0,0,1">
                            <Grid>
                                <Image Source="/02-title.png" Width="130" Stretch="Fill" Height="82" HorizontalAlignment="Left" Margin="3,0,0,0"/>
                                <Label Content="Example Frame" Foreground="#FFE6E8E6" Padding="140,0,0,0" FontSize="16"/>
                                <Label Content="640x480" Foreground="#90E6E8E6" Padding="140,22,0,0" FontSize="12"/>
                            </Grid>
                        </ListBoxItem>-->
                    </ListBox>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
